	var showAlert = function() {
		alert("the page will redirect when the counter reaches zero")
	}
	setTimeout(showAlert, 5010)

	// setInterval()
	setTimeout(redirect, 15010)

	function redirect() {
		window.location.href = "http://www.rice.edu";
	}

	var secLeft = 15;
	function countDown() {
		setInterval(function () {
			var indicator = document.getElementById("indicator")
			indicator.innerHTML = --secLeft
			if(secLeft == 0) {
				window.location.href = "http://www.rice.edu";
			}
		}, 1000)
	}
	
	window.onload = countDown();
</script>
