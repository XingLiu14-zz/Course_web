
function changeImage(imgId, count) {
    var img = document.getElementById(imgId);
    var num = parseInt(imgId.substring(imgId.length - 1))
    img.src = imgSet[num][count];
    count++;


    if(count >= imgSet[num].length){
        count = 0;
    }
    return count
}

