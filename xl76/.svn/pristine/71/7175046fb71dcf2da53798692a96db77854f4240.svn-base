var x = 1
var y = 1
var z = 1
var image0
var image1
var image2

function begin() {
	var inter0 = Math.floor(Math.random() * 5) + 1
	var inter1 = Math.floor(Math.random() * 5) + 1
	var inter2 = Math.floor(Math.random() * 5) + 1
	image0 = setInterval(function() {
		x = changeImage("img0", x)
	}, inter0 * 1000)
	image1 = setInterval(function() {
		y = changeImage("img1", y)
	}, inter1 * 1000)
	image2 = setInterval(function() {
		z = changeImage("img2", z)
	}, inter2 * 1000)

}

var stopBtn0 = document.getElementById("stop0")
var stopBtn1 = document.getElementById("stop1")
var stopBtn2 = document.getElementById("stop2")

stopBtn0.onclick = function() {
	if(stopBtn0.value == "Stop") {
	 stopBtn0.value = "Start"
		Stop(image0)
	}
	else {
		stopBtn0.value = "Stop"
		Start(image0)
	}
}

stopBtn1.onclick = function() {
	if(stopBtn1.value == "Stop") {
		stopBtn1.value = "Start"
		Stop(image1)
	}
	else {
		stopBtn1.value = "Stop"
		Start(image1)
	}
}

stopBtn2.onclick = function() {
	if(stopBtn2.value == "Stop") {
		stopBtn2.value = "Start"
		Stop(image2)
	}
	else {
		stopBtn2.value = "Stop"
		Start(image2)
	}
}

function Stop(image) {
	clearInterval(image);
}

function Start(image) {
	var inter = Math.floor(Math.random() * 5) + 1
	if(image == image0) {
		image0 = setInterval(function() {
			x = changeImage("img0", x)
		}, inter * 1000)
	}
	if(image == image1) {
		image1 = setInterval(function() {
			y = changeImage("img1", y)
		}, inter * 1000)
	}
	if(image == image2) {
		image2 = setInterval(function() {
			z = changeImage("img2", z)
		}, inter * 1000)
	}
}


window.onload = begin()



